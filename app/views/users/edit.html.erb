<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
  <%= form_with model: @user do |f| %>
<div class="form-group">
  <h4>Name</h4>
  <%= f.text_field :name %></div>
<div class="form-group">
  <h4>Image</h4>
  <%= f.file_field :image, accept: "image/*" %></div>
  <div class="form-group">
  <h4>Introduction</h4>
  <%= f.text_area :introduction %></div>
<div class="form-group">
  <%= f.submit 'Update User' %></div>

<% end %>
</div>
</div>
</div>
