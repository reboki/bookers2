<p id="notice"></p>
<div class= "container px-5 px-sm-0">
  <div class="row">
<%= render 'books/column', user: @user, book: @book%>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>

  <table class= "table table-hover table-inverse">
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspen="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %><%= @user.name %></td>
      <td><%= book.title %></td>
      <td><%= book.opinion %></td>
      <td><%= link_to "Edit", edit_book_path(book.id), class: 'btn btn-sm btn-success'%></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-sm btn-success' %></td>
    </tr>
    <% end %>
    </tbody>

  </table>
  </div>
  </div>
  </div>